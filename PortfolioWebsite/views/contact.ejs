        <tbody>
            <!--------------------------body content----------------------->

            <tr>
                
                <td>
                    <h1 class="bigtitle"> Get In Touch With Me</h1>

                    <form id="AboutMeForm" method="post" action="/send">
                        
                        <div class="form-inner">
                            <h2 class="formheader"> Get In Touch</h2>
                            <div class="mb-3">
                            <input type="text" placeholder="name" name="name" id="input1" onfocus="helpText(0)"
                                onblur="helpText(4)">
                                <% if(errors && errors.name) { %>
                                    <span class="text-danger"><%= errors.name.msg %></span>
                                    <% } %>
                                </div>
                            <input type="email" placeholder="email" name="email"  id="input2" onkeyup="handleOnKeyUp(this)"
                                onfocus="helpText(1)" onblur="helpText(4)">
                                <% if (errors && errors.email) { %>
                                    <span class="text-danger"><%= errors.email.msg %></span>
                                    <% } %>
                                    <input type="text" placeholder="subject" name="subject"  id="input2" onkeyup="handleOnKeyUp(this)"
                                    onfocus="helpText(1)" onblur="helpText(4)">
                                    <% if (errors && errors.subject) { %>
                                        <span class="text-danger"><%= errors.subject.msg %></span>
                                        <% } %>
                                
                            

                            <textarea id="textarea1" placeholder="Message..." name="message" rows="5" onkeyup="handleOnKeyUp(this)"
                                onfocus="helpText(2)" onblur="helpText(4)"></textarea>
                                <% if(errors && errors.message) { %>
                                    <span class="text-danger"><%= errors.message.msg %></span>
                                    <% } %>


                            <button class="send" type="submit" value="Send" onfocus="helpText(3)" onblur="helpText(4)">Send
                                message</button>
                            
                            <p id="cont1"></p>
                        </div>
                        <div class="form-left-decoration"></div>
                        <div class="form-right-decoration"></div>
                        <div class="circle"></div>
                       
                    </form>
